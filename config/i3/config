exec_always --no-startup-id numlockx on


# Conky
exec --no-startup-id ~/.config/conky/start_conky.sh


# Polybar
exec_always ~/.config/i3/start_polybar.sh top &

# Load notification daemon
exec_always --no-startup-id dunst


# Load Xresources
