# ~/.alias

# Alias
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ..='cd ..'
alias ...='cd ../..'
alias vi='vim'

# Zypper Alias
alias zypin='sudo zypper in --no-recommend'
alias zyprm='sudo zypper rm --clean-deps'

# PS1
VERT='\[\033[0;32m\]'
ORANGE='\[\033[1;33m\]'
BLANC='\[\033[1;37m\]'
GRIS='\[\033[0;m\]'
ROUGE='\[\033[0;31m\]'

PS1="${GRIS}[${VERT}\u${GRIS} (\h): ${ORANGE}\w${GRIS}] ${VERT}\$ ${GRIS}"

# Vim 
EDITOR=vim
VISUAL=$EDITOR
export EDITOR VISUAL


